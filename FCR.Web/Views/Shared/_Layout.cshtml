<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Friberg Car Rentals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FCR.Web.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header class="border-bottom shadow-sm bg-white sticky-top">
        <div class="container-fluid px-0">
            <!-- Top Bar -->
            <div class="top-bar px-3 py-2 bg-light">
                <div class="d-flex flex-wrap justify-content-between align-items-center">
                    <!-- Logo and Brand -->
                    <div class="d-flex align-items-center">
                        <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none me-3">
                            <img src="~/logo.png" alt="Friberg Car Rentals Logo" class="img-fluid" style="max-height: 40px;">
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-none d-md-block">
                            <span class="fs-4 fw-bold text-primary">Friberg Car Rentals</span>
                        </a>
                    </div>

                    <!-- Login/Register or User Actions -->
                    <div class="d-flex align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary rounded-pill me-2">
                                <i class="bi bi-lightning-charge-fill me-1"></i> Quick Book
                            </a>
                            <a asp-controller="Bookings" asp-action="MyBookings" class="btn btn-outline-primary rounded-pill">
                                <i class="bi bi-calendar-check me-1"></i> My Bookings
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary rounded-pill me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Login
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary rounded-pill">
                                <i class="bi bi-person-plus me-1"></i> Register
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white">
                <div class="container-fluid px-3">
                    <!-- Mobile Brand -->
                    <a class="navbar-brand d-lg-none text-primary fw-bold" asp-controller="Home" asp-action="Index">
                        Friberg
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-car-front me-1"></i> Our Fleet
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="About">
                                    <i class="bi bi-info-circle me-1"></i> About Us
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 py-2 text-dark fw-medium" asp-controller="Home" asp-action="Contact">
                                    <i class="bi bi-telephone me-1"></i> Contact
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle px-3 py-2 text-dark fw-medium" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-speedometer2 me-1"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users"><i class="bi bi-people me-2"></i>User Management</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Cars" asp-action="Index"><i class="bi bi-car-front me-2"></i>Car Inventory</a></li>
                                        <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Index"><i class="bi bi-calendar-check me-2"></i>All Bookings</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="d-flex align-items-center">
                                <div class="dropdown">
                                    <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown">
                                        <img src="~/UserIcon.png" alt="User" width="32" height="32" class="rounded-circle me-2">
                                        <span class="d-none d-lg-inline">@User.Identity?.Name</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="post" asp-controller="Account" asp-action="Logout">
                                                <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3 pt-4">
            @RenderBody()
        </main>
    </div>


    <footer class="bg-light text-white pt-5 pb-4 border-top border-secondary">
        <div class="container">
            <div class="row g-4">
                <!-- Company Info -->
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/logo.png" alt="Friberg Car Rentals" class="img-fluid me-2" style="max-height: 100px;">
                        <h3 class="h5 mb-0 text-primary fw-bold">Friberg Car Rentals</h3>
                    </div>
                    <p class="small text-muted">Premium car rental services with unmatched quality and customer satisfaction since 2010.</p>
                    <div class="social-icons mt-3">
                        <a href="#" class="text-dark me-2"><i class="bi bi-facebook fs-5"></i></a>
                        <a href="#" class="text-dark me-2"><i class="bi bi-twitter-x fs-5"></i></a>
                        <a href="#" class="text-dark me-2"><i class="bi bi-instagram fs-5"></i></a>
                        <a href="#" class="text-dark me-2"><i class="bi bi-linkedin fs-5"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="text-uppercase text-primary mb-3 fw-bold">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-dark text-decoration-none small">Home</a></li>
                        <li class="mb-2"><a href="#" class="text-dark text-decoration-none small">Our Fleet</a></li>
                        <li class="mb-2"><a href="#" class="text-dark text-decoration-none small">Pricing</a></li>
                        <li class="mb-2"><a href="#" class="text-dark text-decoration-none small">Locations</a></li>
                        <li class="mb-2"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-dark text-decoration-none small">Privacy Policy</a></li>
                    </ul>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase text-primary mb-3 fw-bold">Contact Us</h5>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2"><i class="bi bi-geo-alt-fill text-primary me-2"></i> 123 Rental Street, Auto City</li>
                        <li class="mb-2"><i class="bi bi-telephone-fill text-primary me-2"></i> +1 (555) 123-4567</li>
                        <li class="mb-2"><i class="bi bi-envelope-fill text-primary me-2"></i> info@fribergrentals.com</li>
                        <li class="mb-2"><i class="bi bi-clock-fill text-primary me-2"></i> Mon-Sun: 24/7 Service</li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase text-primary mb-3 fw-bold">Newsletter</h5>
                    <p class="small text-muted">Subscribe for special offers and updates</p>
                    <form class="mb-3">
                        <div class="input-group">
                            <input type="email" class="form-control form-control-sm" placeholder="Your email">
                            <button class="btn btn-primary btn-sm" type="submit">
                                <i class="bi bi-send-fill"></i>
                            </button>
                        </div>
                    </form>
                    <div class="payment-methods mt-3">
                        <img src="~/visa.svg" alt="Visa" class="me-1" style="width:60px;">
                        <img src="~/mastercard.svg" alt="Mastercard" class="me-1" style="width:50px;" />
                        <img src="~/paypal.svg" alt="PayPal" class="me-1" style="width:100px;">
                    </div>
                </div>
            </div>

            <hr class="my-4 border-secondary">
        </div>

    </footer>

    <!-- Footer Section -->
    <footer class="py-4 bg-dark text-white-50">
        <div class="container">
            <div class="row align-items-center">
                <!-- Copyright -->
                <div class="col-md-6 text-center text-md-start">
                    <small>&copy; @DateTime.Now.Year Friberg Car Rental. All rights reserved.</small>
                </div>

                <!-- Privacy Policy Links -->
                <div class="col-md-6 text-center text-md-end">
                    <small>
                        <a href="/Privacy" class="text-white-50 text-decoration-none me-3">Privacy Policy</a>
                        <a href="/Terms" class="text-white-50 text-decoration-none me-3">Terms of Service</a>
                        <a href="/Contact" class="text-white-50 text-decoration-none">Contact Us</a>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>