@model IEnumerable<FCR.Web.Services.Base.UserDto>

@{
    ViewData["Title"] = "User Management";
}

<!-- Users Management Section -->
<section class="py-12 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8">
            <div class="flex flex-col md:flex-row md:items-center mt-20 md:justify-between">
                <div class="mb-4 md:mb-0">
                    <a asp-controller="Admin" asp-action="Dashboard" class="inline-flex items-center text-primary-600 hover:text-primary-800 font-medium mb-2">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Dashboard
                    </a>
                    <h1 class="text-4xl font-black text-gray-900">User Management</h1>
                    <p class="text-gray-600 mt-2">Manage system users and their permissions</p>
                </div>
                <a asp-action="Create"
                   class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-500 to-green-700 hover:from-green-600 hover:to-green-800 text-white rounded-xl font-bold transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                    <i class="fas fa-user-plus mr-2"></i>
                    Create New User
                </a>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-50 border-l-4 border-green-500 rounded-lg p-4">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 mr-3 text-xl"></i>
                    <p class="text-green-700 font-medium">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        }

        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 rounded-lg p-4">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-circle text-red-500 mr-3 text-xl"></i>
                    <p class="text-red-700 font-medium">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        }

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium mb-1">Total Users</p>
                        <p class="text-3xl font-black text-gray-900">@(Model?.Count() ?? 0)</p>
                    </div>
                    <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-users text-blue-600 text-2xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium mb-1">Admin Users</p>
                        <p class="text-3xl font-black text-gray-900">@(Model?.Count(u => u.Roles?.Contains("Admin") == true) ?? 0)</p>
                    </div>
                    <div class="w-14 h-14 bg-yellow-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-crown text-yellow-600 text-2xl"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-lg p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-500 text-sm font-medium mb-1">Regular Users</p>
                        <p class="text-3xl font-black text-gray-900">@(Model?.Count(u => u.Roles?.Contains("Admin") != true) ?? 0)</p>
                    </div>
                    <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center">
                        <i class="fas fa-user text-green-600 text-2xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search & Filter -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1 relative">
                    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input type="text"
                           id="searchInput"
                           placeholder="Search by name or email..."
                           class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                </div>
                <select id="roleFilter"
                        class="px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                    <option value="">All Roles</option>
                    <option value="Admin">Admin Only</option>
                    <option value="User">Regular Users</option>
                </select>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Users Grid (Desktop) - Hidden on Mobile -->
            <div class="hidden lg:block bg-white rounded-2xl shadow-lg overflow-hidden">
                <table class="w-full">
                    <thead class="bg-gradient-to-r from-primary-500 to-primary-700 text-white">
                        <tr>
                            <th class="px-6 py-4 text-left font-bold">
                                <i class="fas fa-user mr-2"></i>User
                            </th>
                            <th class="px-6 py-4 text-left font-bold">
                                <i class="fas fa-envelope mr-2"></i>Email
                            </th>
                            <th class="px-6 py-4 text-left font-bold">
                                <i class="fas fa-shield-alt mr-2"></i>Roles
                            </th>
                            <th class="px-6 py-4 text-center font-bold">
                                <i class="fas fa-cog mr-2"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody id="userTableBody" class="divide-y divide-gray-200">
                        @foreach (var user in Model)
                        {
                            <tr class="hover:bg-gray-50 transition-colors user-row"
                                data-name="@user.FirstName @user.LastName"
                                data-email="@user.Email"
                                data-roles="@string.Join(",", user.Roles ?? new List<string>())">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="w-10 h-10 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                            @(user.FirstName?.Substring(0, 1).ToUpper() ?? "?")@(user.LastName?.Substring(0, 1).ToUpper() ?? "")
                                        </div>
                                        <div>
                                            <p class="font-bold text-gray-900">@user.FirstName @user.LastName</p>
                                            @if (user.Roles?.Contains("Admin") == true)
                                            {
                                                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-semibold bg-yellow-100 text-yellow-800">
                                                    <i class="fas fa-crown mr-1"></i>Admin
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <a href="mailto:@user.Email" class="text-primary-600 hover:text-primary-800 font-medium">
                                        @user.Email
                                    </a>
                                </td>
                                <td class="px-6 py-4">
                                    @if (user.Roles != null && user.Roles.Any())
                                    {
                                        <div class="flex flex-wrap gap-2">
                                            @foreach (var role in user.Roles)
                                            {
                                                <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold">
                                                    @role
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 italic">No roles</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@user.Id"
                                           class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
                                           title="Edit User">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="inline"
                                              onsubmit="return confirm('Are you sure you want to delete @user.FirstName @user.LastName? This action cannot be undone.');">
                                            <button type="submit"
                                                    class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
                                                    title="Delete User">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Users Cards (Mobile) - Shown on Mobile Only -->
            <div class="lg:hidden space-y-4" id="userCardsContainer">
                @foreach (var user in Model)
                {
                    <div class="bg-white rounded-2xl shadow-lg p-6 user-card"
                         data-name="@user.FirstName @user.LastName"
                         data-email="@user.Email"
                         data-roles="@string.Join(",", user.Roles ?? new List<string>())">
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex items-center">
                                <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
                                    @(user.FirstName?.Substring(0, 1).ToUpper() ?? "?")@(user.LastName?.Substring(0, 1).ToUpper() ?? "")
                                </div>
                                <div>
                                    <p class="font-bold text-gray-900 text-lg">@user.FirstName @user.LastName</p>
                                    @if (user.Roles?.Contains("Admin") == true)
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold bg-yellow-100 text-yellow-800">
                                            <i class="fas fa-crown mr-1"></i>Admin
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="space-y-2 mb-4">
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-envelope w-5 text-primary-500 mr-2"></i>
                                <a href="mailto:@user.Email" class="text-primary-600 hover:text-primary-800">@user.Email</a>
                            </div>
                            <div class="flex items-center text-gray-600">
                                <i class="fas fa-shield-alt w-5 text-primary-500 mr-2"></i>
                                @if (user.Roles != null && user.Roles.Any())
                                {
                                    <div class="flex flex-wrap gap-1">
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded-full text-xs font-semibold">
                                                @role
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-gray-400 italic">No roles</span>
                                }
                            </div>
                        </div>

                        <div class="flex gap-2">
                            <a asp-action="Edit" asp-route-id="@user.Id"
                               class="flex-1 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-semibold text-center transition-all duration-300">
                                <i class="fas fa-edit mr-1"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="flex-1"
                                  onsubmit="return confirm('Are you sure you want to delete @user.FirstName @user.LastName?');">
                                <button type="submit"
                                        class="w-full px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold transition-all duration-300">
                                    <i class="fas fa-trash-alt mr-1"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
                <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-users text-gray-400 text-4xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-2">No Users Found</h3>
                <p class="text-gray-600 mb-6">Get started by creating your first user</p>
                <a asp-action="Create"
                   class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-500 to-green-700 hover:from-green-600 hover:to-green-800 text-white rounded-xl font-bold transform hover:scale-105 transition-all duration-300 shadow-lg">
                    <i class="fas fa-user-plus mr-2"></i>
                    Create First User
                </a>
            </div>
        }

    </div>
</section>

@section Scripts {
    <script>
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const roleFilter = document.getElementById('roleFilter');

        function filterUsers() {
            const searchTerm = searchInput.value.toLowerCase();
            const roleValue = roleFilter.value;

            // Filter table rows (desktop)
            document.querySelectorAll('.user-row').forEach(row => {
                const name = row.dataset.name.toLowerCase();
                const email = row.dataset.email.toLowerCase();
                const roles = row.dataset.roles;

                const matchesSearch = name.includes(searchTerm) || email.includes(searchTerm);
                const matchesRole = !roleValue || roles.includes(roleValue);

                row.style.display = matchesSearch && matchesRole ? '' : 'none';
            });

            // Filter cards (mobile)
            document.querySelectorAll('.user-card').forEach(card => {
                const name = card.dataset.name.toLowerCase();
                const email = card.dataset.email.toLowerCase();
                const roles = card.dataset.roles;

                const matchesSearch = name.includes(searchTerm) || email.includes(searchTerm);
                const matchesRole = !roleValue || roles.includes(roleValue);

                card.style.display = matchesSearch && matchesRole ? '' : 'none';
            });
        }

        searchInput.addEventListener('input', filterUsers);
        roleFilter.addEventListener('change', filterUsers);
    </script>
}