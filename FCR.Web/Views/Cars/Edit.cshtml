@model FCR.Web.Services.Base.CarUpdateDto

@{
    ViewData["Title"] = "Edit Car";
    var carId = ViewBag.CarId as int?;
    var brand = ViewBag.Brand as string;
    var modelName = ViewBag.Model as string; 
}

<!-- Edit Car Section -->
<section class="py-12 bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Header -->
        <div class="mb-8">
            <a asp-action="Details" asp-route-id="@carId" class="inline-flex items-center text-primary-600 hover:text-primary-800 font-medium mb-4">
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Car Details
            </a>
            <h1 class="text-4xl font-black text-gray-900">
                <i class="fas fa-edit text-primary-500 mr-3"></i>
                Edit Car
            </h1>
            <p class="text-gray-600 mt-2">Update vehicle information for <strong>@brand @modelName</strong></p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-50 border-l-4 border-green-500 rounded-lg p-4 animate-slide-up">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 mr-3 text-xl"></i>
                    <p class="text-green-700 font-medium">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 rounded-lg p-4 animate-slide-up">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-circle text-red-500 mr-3 text-xl"></i>
                    <p class="text-red-700 font-medium">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="mb-6 bg-red-50 border-l-4 border-red-500 rounded-lg p-4 hidden"></div>

        <!-- Form Card -->
        <div class="bg-white rounded-3xl shadow-xl p-8">
            <form asp-action="Edit" method="post" id="carEditForm">
                <input type="hidden" name="CarId" value="@carId" />
                
                <!-- Info Banner -->
                <div class="bg-blue-50 border-l-4 border-blue-500 rounded-r-lg p-4 mb-8">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mr-3 mt-0.5"></i>
                        <div>
                            <p class="text-blue-700 font-semibold mb-1">Car ID: #@carId</p>
                            <p class="text-blue-600 text-sm">Editing: <strong>@brand @modelName</strong></p>
                        </div>
                    </div>
                </div>

                <!-- Basic Information Section -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-info-circle text-primary-500 mr-3"></i>
                        Basic Information
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        
                        <!-- Brand -->
                        <div>
                            <label asp-for="Brand" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-tag text-primary-500 mr-2"></i>Brand
                            </label>
                            <input asp-for="Brand" 
                                   type="text"
                                   placeholder="e.g., Toyota, BMW, Mercedes"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                            <span asp-validation-for="Brand" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Model -->
                        <div>
                            <label asp-for="Model" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-car text-primary-500 mr-2"></i>Model
                            </label>
                            <input asp-for="Model" 
                                   type="text"
                                   placeholder="e.g., Camry, X5, S-Class"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                            <span asp-validation-for="Model" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Category -->
                        <div>
                            <label asp-for="Category" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-layer-group text-primary-500 mr-2"></i>Category
                            </label>
                            <select asp-for="Category" 
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                                <option value="">Select Category</option>
                                <option value="Sedan">Sedan</option>
                                <option value="SUV">SUV</option>
                                <option value="Sports">Sports</option>
                                <option value="Luxury">Luxury</option>
                                <option value="Compact">Compact</option>
                                <option value="Van">Van</option>
                                <option value="Truck">Truck</option>
                            </select>
                            <span asp-validation-for="Category" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Year -->
                        <div>
                            <label asp-for="Year" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-calendar text-primary-500 mr-2"></i>Year
                            </label>
                            <input asp-for="Year" 
                                   type="number" 
                                   min="2000" 
                                   max="2100"
                                   placeholder="2024"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                            <span asp-validation-for="Year" class="text-red-500 text-sm mt-1"></span>
                        </div>

                    </div>
                </div>

                <!-- Specifications Section -->
                <div class="mb-8 pb-8 border-t border-gray-200 pt-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-cogs text-primary-500 mr-3"></i>
                        Specifications
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        
                        <!-- Transmission -->
                        <div>
                            <label asp-for="Transmission" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-cog text-primary-500 mr-2"></i>Transmission
                            </label>
                            <select asp-for="Transmission" 
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                                <option value="Automatic">Automatic</option>
                                <option value="Manual">Manual</option>
                                <option value="CVT">CVT</option>
                                <option value="Semi-Automatic">Semi-Automatic</option>
                            </select>
                            <span asp-validation-for="Transmission" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Fuel Type -->
                        <div>
                            <label asp-for="FuelType" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-gas-pump text-primary-500 mr-2"></i>Fuel Type
                            </label>
                            <select asp-for="FuelType" 
                                    class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                                <option value="Petrol">Petrol</option>
                                <option value="Diesel">Diesel</option>
                                <option value="Electric">Electric</option>
                                <option value="Hybrid">Hybrid</option>
                                <option value="Plug-in Hybrid">Plug-in Hybrid</option>
                            </select>
                            <span asp-validation-for="FuelType" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Seats -->
                        <div>
                            <label asp-for="Seats" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-users text-primary-500 mr-2"></i>Seats
                            </label>
                            <input asp-for="Seats" 
                                   type="number" 
                                   min="1" 
                                   max="20"
                                   placeholder="5"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                            <span asp-validation-for="Seats" class="text-red-500 text-sm mt-1"></span>
                        </div>

                    </div>
                </div>

                <!-- Pricing & Availability Section -->
                <div class="mb-8 pb-8 border-t border-gray-200 pt-8">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-dollar-sign text-primary-500 mr-3"></i>
                        Pricing & Availability
                    </h2>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        
                        <!-- Daily Rate -->
                        <div>
                            <label asp-for="DailyRate" class="block text-sm font-bold text-gray-700 mb-2">
                                <i class="fas fa-tag text-primary-500 mr-2"></i>Daily Rate ($)
                            </label>
                            <input asp-for="DailyRate" 
                                   type="number" 
                                   step="0.01"
                                   min="0.01"
                                   placeholder="99.99"
                                   class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-primary-500 focus:ring-2 focus:ring-primary-200 transition-all duration-300 outline-none">
                            <span asp-validation-for="DailyRate" class="text-red-500 text-sm mt-1"></span>
                        </div>

                        <!-- Is Available Toggle -->
                        <div class="flex items-end">
                            <div class="w-full">
                                <label class="block text-sm font-bold text-gray-700 mb-2">
                                    <i class="fas fa-toggle-on text-primary-500 mr-2"></i>Availability Status
                                </label>
                                <div class="bg-gray-50 rounded-xl p-4 border-2 border-gray-200">
                                    <label class="relative inline-flex items-center cursor-pointer">
                                        <input asp-for="IsAvailable" 
                                               type="checkbox" 
                                               class="sr-only peer">
                                        <div class="w-14 h-7 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:bg-green-600"></div>
                                        <span class="ml-3 text-sm font-bold text-gray-700">
                                            Available for Rent
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
                    <button type="submit" 
                            class="flex-1 px-8 py-4 bg-gradient-to-r from-primary-500 to-primary-700 hover:from-primary-600 hover:to-primary-800 text-white rounded-xl font-bold text-lg transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                        <i class="fas fa-save mr-2"></i>
                        Save Changes
                    </button>
                    <a asp-action="Details" asp-route-id="@carId"
                       class="flex-1 px-8 py-4 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-xl font-bold text-lg text-center transform hover:scale-105 transition-all duration-300">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </a>
                </div>

            </form>
        </div>

        <!-- Help Section -->
        <div class="mt-8 bg-gradient-to-br from-yellow-50 to-orange-50 rounded-2xl p-6 border-2 border-yellow-200">
            <h3 class="text-lg font-bold text-gray-900 mb-3 flex items-center">
                <i class="fas fa-lightbulb text-yellow-600 mr-2"></i>
                Editing Tips
            </h3>
            <ul class="space-y-2 text-gray-700">
                <li class="flex items-start">
                    <i class="fas fa-check text-yellow-600 mr-2 mt-1"></i>
                    Changes will be reflected immediately after saving
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-yellow-600 mr-2 mt-1"></i>
                    Make sure all required fields are filled correctly
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-yellow-600 mr-2 mt-1"></i>
                    Toggle availability to control rental status
                </li>
                <li class="flex items-start">
                    <i class="fas fa-check text-yellow-600 mr-2 mt-1"></i>
                    Images can be managed separately from car details page
                </li>
            </ul>
        </div>

        <!-- Quick Actions -->
        <div class="mt-6 flex gap-4">
            <a asp-action="Details" asp-route-id="@carId" 
               class="inline-flex items-center px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-xl font-bold transition-all">
                <i class="fas fa-eye mr-2"></i>
                View Details
            </a>
            <a asp-action="Delete" asp-route-id="@carId" 
               class="inline-flex items-center px-6 py-3 bg-red-500 hover:bg-red-600 text-white rounded-xl font-bold transition-all">
                <i class="fas fa-trash-alt mr-2"></i>
                Delete Car
            </a>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Form submission loading state
        document.getElementById('carEditForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Saving Changes...';
        });

        // Show validation errors with animation
        document.addEventListener('DOMContentLoaded', function() {
            const validationSummary = document.querySelector('[asp-validation-summary]');
            if (validationSummary && validationSummary.querySelector('li')) {
                validationSummary.classList.remove('hidden');
            }
        });
    </script>
}