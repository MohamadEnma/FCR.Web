@model dynamic

@{
    ViewData["Title"] = "Manage Car Images";
    var carId = ViewBag.CarId as int?;
    var brand = ViewBag.Brand as string;
    var modelName = ViewBag.Model as string;
    var images = ViewBag.Images as List<FCR.Web.Services.Base.ImageResponseDto> ?? new List<FCR.Web.Services.Base.ImageResponseDto>();
}

<!-- Manage Images Section -->
<section class="py-12 bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Header -->
        <div class="mb-8 flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
                <a asp-action="Details" asp-route-id="@carId" class="inline-flex items-center text-primary-600 hover:text-primary-800 font-medium mb-4">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Back to Car Details
                </a>
                <h1 class="text-4xl font-black text-gray-900 mb-2">
                    <i class="fas fa-images text-primary-500 mr-3"></i>
                    Manage Images
                </h1>
                <p class="text-gray-600">
                    <strong>@brand @modelName</strong> • Car ID: #@carId
                </p>
            </div>
            <a asp-action="Index" 
               class="mt-4 md:mt-0 inline-flex items-center px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 rounded-xl font-bold transition-all">
                <i class="fas fa-list mr-2"></i>
                Back to All Cars
            </a>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 bg-green-50 border-l-4 border-green-500 rounded-lg p-4 animate-slide-up">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-green-500 mr-3 text-xl"></i>
                    <p class="text-green-700 font-medium">@TempData["SuccessMessage"]</p>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 rounded-lg p-4 animate-slide-up">
                <div class="flex items-center">
                    <i class="fas fa-exclamation-circle text-red-500 mr-3 text-xl"></i>
                    <p class="text-red-700 font-medium">@TempData["ErrorMessage"]</p>
                </div>
            </div>
        }

        <!-- Upload Images Card -->
        <div class="bg-white rounded-3xl shadow-xl p-8 mb-8">
            <div class="mb-6">
                <h2 class="text-2xl font-bold text-gray-900 mb-2 flex items-center">
                    <i class="fas fa-cloud-upload-alt text-green-500 mr-3"></i>
                    Upload New Images
                </h2>
                <p class="text-gray-600">Select multiple images to upload at once</p>
            </div>

            <form asp-action="UploadImages" method="post" enctype="multipart/form-data" id="imageUploadForm">
                <input type="hidden" name="carId" value="@carId" />

                <!-- File Upload Area -->
                <div class="mb-6">
                    <label class="block text-sm font-bold text-gray-700 mb-3">
                        <i class="fas fa-file-image text-primary-500 mr-2"></i>
                        Select Image Files
                    </label>
                    
                    <!-- Custom File Upload Button -->
                    <div class="relative border-4 border-dashed border-gray-300 rounded-2xl p-12 text-center hover:border-primary-500 transition-all duration-300 bg-gray-50">
                        <input type="file" 
                               name="images" 
                               id="imageInput"
                               accept="image/jpeg,image/jpg,image/png,image/gif"
                               multiple
                               required
                               class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
                               onchange="previewImages(event)">
                        
                        <div class="pointer-events-none">
                            <i class="fas fa-cloud-upload-alt text-6xl text-gray-400 mb-4"></i>
                            <p class="text-xl font-bold text-gray-700 mb-2">
                                Click to browse or drag and drop
                            </p>
                            <p class="text-gray-500">
                                JPG, PNG, or GIF (Max 5MB per file)
                            </p>
                        </div>
                    </div>

                    <p class="text-sm text-gray-500 mt-2">
                        <i class="fas fa-info-circle mr-1"></i>
                        You can select multiple files at once
                    </p>
                </div>

                <!-- Image Preview Area -->
                <div id="imagePreview" class="hidden mb-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-eye text-primary-500 mr-2"></i>
                        Preview (<span id="previewCount">0</span> selected)
                    </h3>
                    <div id="previewGrid" class="grid grid-cols-2 md:grid-cols-4 gap-4"></div>
                </div>

                <!-- Requirements -->
                <div class="bg-blue-50 border-l-4 border-blue-500 rounded-r-lg p-4 mb-6">
                    <div class="flex items-start">
                        <i class="fas fa-info-circle text-blue-500 mr-3 mt-0.5"></i>
                        <div>
                            <p class="text-blue-700 font-semibold mb-2">Image Requirements:</p>
                            <ul class="text-blue-600 text-sm space-y-1">
                                <li>• <strong>Formats:</strong> JPG, JPEG, PNG, or GIF</li>
                                <li>• <strong>Size:</strong> Maximum 5MB per image</li>
                                <li>• <strong>Recommended:</strong> High quality images (minimum 800x600 pixels)</li>
                                <li>• <strong>Tip:</strong> Include multiple angles (front, side, interior, back)</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Upload Button -->
                <button type="submit" 
                        id="uploadBtn"
                        disabled
                        class="w-full md:w-auto px-8 py-4 bg-gradient-to-r from-green-500 to-green-700 hover:from-green-600 hover:to-green-800 text-white rounded-xl font-bold text-lg transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none">
                    <i class="fas fa-cloud-upload-alt mr-2"></i>
                    <span id="uploadBtnText">Upload Images</span>
                </button>
            </form>
        </div>

        <!-- Existing Images Gallery -->
        <div class="bg-white rounded-3xl shadow-xl p-8">
            <div class="mb-6 flex items-center justify-between">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-2 flex items-center">
                        <i class="fas fa-photo-video text-primary-500 mr-3"></i>
                        Current Images
                    </h2>
                    <p class="text-gray-600">@images.Count image@(images.Count != 1 ? "s" : "") uploaded</p>
                </div>
                @if (images.Any())
                {
                    <span class="px-4 py-2 bg-green-100 text-green-700 rounded-full font-bold text-sm">
                        <i class="fas fa-check-circle mr-1"></i>
                        @images.Count Total
                    </span>
                }
            </div>

            @if (images.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var image in images)
                    {
                        <div class="group relative bg-white rounded-2xl shadow-lg overflow-hidden transform hover:-translate-y-2 transition-all duration-300">
                            <!-- Image -->
                            <div class="relative h-64 overflow-hidden bg-gray-100">
                                <img src="@image.Url" 
                                     alt="@image.AltText"
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                
                                <!-- Overlay on Hover -->
                                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                    <a href="@image.Url" 
                                       target="_blank"
                                       class="px-4 py-2 bg-white text-gray-900 rounded-lg font-bold hover:bg-gray-100 transition-colors">
                                        <i class="fas fa-external-link-alt mr-2"></i>
                                        View Full Size
                                    </a>
                                </div>
                            </div>

                            <!-- Info & Actions -->
                            <div class="p-4">
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                    @image.AltText
                                </p>

                                <div class="flex gap-2">
                                    <a href="@image.Url" 
                                       target="_blank"
                                       class="flex-1 px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 rounded-lg font-semibold text-center transition-all text-sm">
                                        <i class="fas fa-eye mr-1"></i>
                                        View
                                    </a>
                                    <form asp-action="DeleteImage" method="post" class="flex-1"
                                          onsubmit="return confirm('Are you sure you want to delete this image?');">
                                        <input type="hidden" name="imageId" value="@image.ImageId" />
                                        <input type="hidden" name="carId" value="@carId" />
                                        <button type="submit" 
                                                class="w-full px-4 py-2 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg font-semibold transition-all text-sm">
                                            <i class="fas fa-trash-alt mr-1"></i>
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <!-- Image Number Badge -->
                            <div class="absolute top-3 left-3 px-3 py-1 bg-black/70 text-white rounded-full text-xs font-bold">
                                #@(images.IndexOf(image) + 1)
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-image text-gray-400 text-4xl"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">No Images Yet</h3>
                    <p class="text-gray-600 mb-6">Upload some beautiful images to showcase this vehicle</p>
                    <button type="button" 
                            onclick="document.getElementById('imageInput').click();"
                            class="inline-flex items-center px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white rounded-xl font-bold transition-all">
                        <i class="fas fa-plus-circle mr-2"></i>
                        Upload First Image
                    </button>
                </div>
            }
        </div>

        <!-- Tips Section -->
        <div class="mt-8 bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-6 border-2 border-purple-200">
            <h3 class="text-lg font-bold text-gray-900 mb-3 flex items-center">
                <i class="fas fa-lightbulb text-purple-600 mr-2"></i>
                Photography Best Practices
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-start">
                    <i class="fas fa-camera text-purple-600 mr-3 mt-1"></i>
                    <div>
                        <p class="font-semibold text-gray-900">High Quality</p>
                        <p class="text-sm text-gray-600">Use high-resolution images for best presentation</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-palette text-purple-600 mr-3 mt-1"></i>
                    <div>
                        <p class="font-semibold text-gray-900">Multiple Angles</p>
                        <p class="text-sm text-gray-600">Show exterior, interior, and detail shots</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-sun text-purple-600 mr-3 mt-1"></i>
                    <div>
                        <p class="font-semibold text-gray-900">Good Lighting</p>
                        <p class="text-sm text-gray-600">Well-lit photos attract more bookings</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-compress text-purple-600 mr-3 mt-1"></i>
                    <div>
                        <p class="font-semibold text-gray-900">Optimize Size</p>
                        <p class="text-sm text-gray-600">Keep files under 5MB for faster loading</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        const uploadBtn = document.getElementById('uploadBtn');
        const imageInput = document.getElementById('imageInput');
        const imagePreview = document.getElementById('imagePreview');
        const previewGrid = document.getElementById('previewGrid');
        const previewCount = document.getElementById('previewCount');

        // Preview selected images
        function previewImages(event) {
            const files = event.target.files;
            
            if (files.length === 0) {
                imagePreview.classList.add('hidden');
                uploadBtn.disabled = true;
                return;
            }

            uploadBtn.disabled = false;
            imagePreview.classList.remove('hidden');
            previewGrid.innerHTML = '';
            previewCount.textContent = files.length;

            Array.from(files).forEach((file, index) => {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'relative rounded-xl overflow-hidden shadow-lg';
                    div.innerHTML = `
                        <img src="${e.target.result}" 
                             alt="Preview ${index + 1}"
                             class="w-full h-32 object-cover">
                        <div class="absolute top-2 left-2 px-2 py-1 bg-black/70 text-white rounded-full text-xs font-bold">
                            ${index + 1}
                        </div>
                        <div class="absolute bottom-2 left-2 right-2 bg-black/70 text-white text-xs px-2 py-1 rounded truncate">
                            ${file.name}
                        </div>
                    `;
                    previewGrid.appendChild(div);
                };
                
                reader.readAsDataURL(file);
            });
        }

        // Form submission loading state
        document.getElementById('imageUploadForm').addEventListener('submit', function(e) {
            uploadBtn.disabled = true;
            document.getElementById('uploadBtnText').innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Uploading...';
        });
    </script>
}