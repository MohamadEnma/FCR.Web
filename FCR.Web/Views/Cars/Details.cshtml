@model FCR.Web.Services.Base.CarResponseDto
@{
    ViewData["Title"] = $"{Model.Brand} {Model.ModelName} - Details";
    var images = Model.Images?.OrderBy(i => i.DisplayOrder).ToList() ?? new List<FCR.Web.Services.Base.ImageResponseDto>();
    var primaryImage = images.FirstOrDefault(i => i.IsPrimary) ?? images.FirstOrDefault();
}

<div class="min-h-screen bg-gray-50 pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-4">
                    <a asp-action="Index" class="text-gray-600 hover:text-primary-600 transition-colors">
                        <i class="fas fa-arrow-left text-xl"></i>
                    </a>
                    <div>
                        <h1 class="text-4xl font-bold text-gray-900">@Model.Brand @Model.ModelName</h1>
                        <p class="text-gray-600 mt-1">@Model.Category • @Model.Year</p>
                    </div>
                </div>

                <!-- Availability Badge -->
                @if (Model.IsAvailable)
                {
                    <span class="px-4 py-2 bg-green-500 text-white font-semibold rounded-full shadow-lg">
                        <i class="fas fa-check-circle mr-2"></i>Available
                    </span>
                }
                else
                {
                    <span class="px-4 py-2 bg-red-500 text-white font-semibold rounded-full shadow-lg">
                        <i class="fas fa-times-circle mr-2"></i>Unavailable
                    </span>
                }
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center">
                <i class="fas fa-check-circle mr-3"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg flex items-center">
                <i class="fas fa-exclamation-circle mr-3"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <!-- Left Column: Images -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">

                    <!-- Primary Image -->
                    <div class="relative bg-gray-200">
                        @if (primaryImage != null && !string.IsNullOrEmpty(primaryImage.Url))
                        {
                            <img id="main-image" src="@primaryImage.Url" alt="@Model.Brand @Model.ModelName" class="w-full h-96 object-cover cursor-pointer" onclick="openLightbox('@primaryImage.Url')">
                        }
                        else
                        {
                            <div class="w-full h-96 flex items-center justify-center bg-gradient-to-br from-gray-300 to-gray-400">
                                <i class="fas fa-car text-9xl text-gray-500"></i>
                            </div>
                        }
                    </div>

                    <!-- Image Thumbnails -->
                    @if (images.Count > 1)
                    {
                        <div class="p-4 bg-gray-50">
                            <div class="flex space-x-3 overflow-x-auto">
                                @foreach (var image in images)
                                {
                                    <div class="relative flex-shrink-0 cursor-pointer group" onclick="changeMainImage('@image.Url')">
                                        <img src="@image.Url" alt="@image.AltText" class="w-24 h-24 object-cover rounded-lg border-2 border-gray-300 hover:border-primary-500 transition-colors">
                                        @if (image.IsPrimary)
                                        {
                                            <div class="absolute top-1 left-1">
                                                <span class="px-2 py-0.5 bg-yellow-500 text-white text-xs font-bold rounded">
                                                    <i class="fas fa-star"></i>
                                                </span>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                            <p class="text-sm text-gray-500 mt-2">
                                <i class="fas fa-images mr-1"></i>@images.Count image@(images.Count != 1 ? "s" : "")
                            </p>
                        </div>
                    }
                </div>

                <!-- Description -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="bg-white rounded-lg shadow-lg p-6 mt-6">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">Description</h2>
                        <p class="text-gray-700 leading-relaxed">@Model.Description</p>
                    </div>
                }
            </div>

            <!-- Right Column: Details -->
            <div class="lg:col-span-1">

                <!-- Pricing -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Pricing</h2>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-gray-600">Daily Rate:</span>
                            <span class="text-2xl font-bold text-primary-600">$@Model.DailyRate.ToString("F2")</span>
                        </div>
                        @if (Model.WeeklyRate.HasValue)
                        {
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Weekly Rate:</span>
                                <span class="text-xl font-semibold text-gray-900">$@Model.WeeklyRate.Value.ToString("F2")</span>
                            </div>
                        }
                        @if (Model.MonthlyRate.HasValue)
                        {
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Monthly Rate:</span>
                                <span class="text-xl font-semibold text-gray-900">$@Model.MonthlyRate.Value.ToString("F2")</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Specifications -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Specifications</h2>
                    <div class="space-y-3">
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-tag w-5 mr-2"></i>Brand</span>
                            <span class="font-semibold">@Model.Brand</span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-car w-5 mr-2"></i>Model</span>
                            <span class="font-semibold">@Model.ModelName</span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-th-large w-5 mr-2"></i>Category</span>
                            <span class="font-semibold">@Model.Category</span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-calendar-alt w-5 mr-2"></i>Year</span>
                            <span class="font-semibold">@Model.Year</span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-cog w-5 mr-2"></i>Transmission</span>
                            <span class="font-semibold">@Model.Transmission</span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-gas-pump w-5 mr-2"></i>Fuel Type</span>
                            <span class="font-semibold">@Model.FuelType</span>
                        </div>
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-users w-5 mr-2"></i>Seats</span>
                            <span class="font-semibold">@Model.Seats</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div class="flex items-center justify-between py-2 border-b border-gray-200">
                                <span class="text-gray-600"><i class="fas fa-palette w-5 mr-2"></i>Color</span>
                                <span class="font-semibold">@Model.Color</span>
                            </div>
                        }
                        @if (Model.Mileage > 0)
                        {
                            <div class="flex items-center justify-between py-2 border-b border-gray-200">
                                <span class="text-gray-600"><i class="fas fa-tachometer-alt w-5 mr-2"></i>Mileage</span>
                                <span class="font-semibold">@Model.Mileage.ToString("N0") km</span>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.LicensePlate))
                        {
                            <div class="flex items-center justify-between py-2">
                                <span class="text-gray-600"><i class="fas fa-id-card w-5 mr-2"></i>License Plate</span>
                                <span class="font-semibold font-mono">@Model.LicensePlate</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Statistics -->
                <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Statistics</h2>
                    <div class="space-y-3">
                        <div class="flex items-center justify-between py-2 border-b border-gray-200">
                            <span class="text-gray-600"><i class="fas fa-calendar-check w-5 mr-2"></i>Total Bookings</span>
                            <span class="font-semibold">@Model.TotalBookings</span>
                        </div>
                        @if (Model.AverageRating.HasValue)
                        {
                            <div class="flex items-center justify-between py-2">
                                <span class="text-gray-600"><i class="fas fa-star w-5 mr-2"></i>Average Rating</span>
                                <span class="font-semibold">@Model.AverageRating.Value.ToString("F1") / 5.0</span>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="space-y-3">
                    <a asp-controller="Home" asp-action="Index" class="block w-full px-6 py-3 bg-gray-200 text-gray-700 text-center rounded-lg font-medium hover:bg-gray-300 transition-colors">
                        <i class="fas fa-arrow-left mr-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Lightbox Modal -->
<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-90 hidden z-50 flex items-center justify-center" onclick="closeLightbox()">
    <div class="relative max-w-5xl max-h-screen p-4">
        <button onclick="closeLightbox()" class="absolute top-8 right-8 text-white text-4xl hover:text-gray-300 transition-colors">
            <i class="fas fa-times"></i>
        </button>
        <img id="lightbox-image" src="" alt="Full size image" class="max-w-full max-h-screen object-contain">
    </div>
</div>

@section Scripts {
    <script>
        function changeMainImage(url) {
            document.getElementById('main-image').src = url;
        }

        function openLightbox(url) {
            document.getElementById('lightbox-image').src = url;
            document.getElementById('lightbox').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeLightbox() {
            document.getElementById('lightbox').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        // Close lightbox on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeLightbox();
            }
        });
    </script>
}
