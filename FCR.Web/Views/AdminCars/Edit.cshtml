@model FCR.Web.Services.Base.CarUpdateDto
@{
    ViewData["Title"] = "Edit Car";
    var carId = ViewBag.CarId;
    var existingImages = ViewBag.ExistingImages as List<FCR.Web.Services.Base.ImageResponseDto> ?? new List<FCR.Web.Services.Base.ImageResponseDto>();
}

<div class="min-h-screen bg-gray-50 pt-24 pb-12">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-4 mb-4">
                <a asp-action="Index" class="text-gray-600 hover:text-primary-600 transition-colors">
                    <i class="fas fa-arrow-left text-xl"></i>
                </a>
                <h1 class="text-4xl font-bold text-gray-900">Edit Car</h1>
            </div>
            <p class="text-gray-600">Update car details and manage images</p>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center">
                <i class="fas fa-check-circle mr-3"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg flex items-center">
                <i class="fas fa-exclamation-circle mr-3"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <form asp-action="Edit" asp-route-id="@carId" method="post" enctype="multipart/form-data" class="bg-white rounded-lg shadow-lg p-8">
            <div asp-validation-summary="All" class="text-red-500 mb-4"></div>
            <input type="hidden" name="id" value="@carId" />

            <!-- Tab Navigation -->
            <div class="border-b border-gray-200 mb-6">
                <nav class="flex space-x-8">
                    <button type="button" onclick="switchTab('details')" id="tab-details" 
                            class="tab-button active py-4 px-2 border-b-2 font-medium text-sm">
                        <i class="fas fa-info-circle mr-2"></i>Car Details
                    </button>
                    <button type="button" onclick="switchTab('images')" id="tab-images" 
                            class="tab-button py-4 px-2 border-b-2 font-medium text-sm">
                        <i class="fas fa-images mr-2"></i>Manage Images (@existingImages.Count)
                    </button>
                </nav>
            </div>

            <!-- Tab: Car Details -->
            <div id="content-details" class="tab-content">
                
                <!-- Basic Information -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Basic Information</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        
                        <div>
                            <label asp-for="Brand" class="block text-sm font-medium text-gray-700 mb-2">Brand <span class="text-red-500">*</span></label>
                            <input asp-for="Brand" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="Brand" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Model" class="block text-sm font-medium text-gray-700 mb-2">Model <span class="text-red-500">*</span></label>
                            <input asp-for="Model" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="Model" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Category" class="block text-sm font-medium text-gray-700 mb-2">Category <span class="text-red-500">*</span></label>
                            <select asp-for="Category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                                <option value="">Select Category</option>
                                <option value="Sedan">Sedan</option>
                                <option value="SUV">SUV</option>
                                <option value="Sports">Sports</option>
                                <option value="Luxury">Luxury</option>
                                <option value="Convertible">Convertible</option>
                                <option value="Electric">Electric</option>
                            </select>
                            <span asp-validation-for="Category" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Year" class="block text-sm font-medium text-gray-700 mb-2">Year <span class="text-red-500">*</span></label>
                            <input asp-for="Year" type="number" min="2000" max="2030" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="Year" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Pricing</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        
                        <div>
                            <label asp-for="DailyRate" class="block text-sm font-medium text-gray-700 mb-2">Daily Rate ($) <span class="text-red-500">*</span></label>
                            <input asp-for="DailyRate" type="number" step="0.01" min="0.01" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="DailyRate" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="WeeklyRate" class="block text-sm font-medium text-gray-700 mb-2">Weekly Rate ($)</label>
                            <input asp-for="WeeklyRate" type="number" step="0.01" min="0" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="WeeklyRate" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="MonthlyRate" class="block text-sm font-medium text-gray-700 mb-2">Monthly Rate ($)</label>
                            <input asp-for="MonthlyRate" type="number" step="0.01" min="0" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="MonthlyRate" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Specifications -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Specifications</h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        
                        <div>
                            <label asp-for="Transmission" class="block text-sm font-medium text-gray-700 mb-2">Transmission <span class="text-red-500">*</span></label>
                            <select asp-for="Transmission" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                                <option value="Automatic">Automatic</option>
                                <option value="Manual">Manual</option>
                            </select>
                            <span asp-validation-for="Transmission" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="FuelType" class="block text-sm font-medium text-gray-700 mb-2">Fuel Type <span class="text-red-500">*</span></label>
                            <select asp-for="FuelType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                                <option value="Petrol">Petrol</option>
                                <option value="Diesel">Diesel</option>
                                <option value="Electric">Electric</option>
                                <option value="Hybrid">Hybrid</option>
                            </select>
                            <span asp-validation-for="FuelType" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Seats" class="block text-sm font-medium text-gray-700 mb-2">Seats <span class="text-red-500">*</span></label>
                            <input asp-for="Seats" type="number" min="2" max="9" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="Seats" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Color" class="block text-sm font-medium text-gray-700 mb-2">Color</label>
                            <input asp-for="Color" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="Color" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Mileage" class="block text-sm font-medium text-gray-700 mb-2">Mileage (km)</label>
                            <input asp-for="Mileage" type="number" min="0" max="500000" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="Mileage" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="LicensePlate" class="block text-sm font-medium text-gray-700 mb-2">License Plate</label>
                            <input asp-for="LicensePlate" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" />
                            <span asp-validation-for="LicensePlate" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Availability -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Availability</h3>
                    <div class="flex items-center">
                        <input asp-for="IsAvailable" type="checkbox" class="w-5 h-5 text-primary-600 border-gray-300 rounded focus:ring-primary-500" />
                        <label asp-for="IsAvailable" class="ml-3 text-sm font-medium text-gray-700">Car is available for rent</label>
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Description</h3>
                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2">Car Description</label>
                        <textarea asp-for="Description" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent" placeholder="Describe the car's features, condition, and any special amenities..."></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Tab: Images -->
            <div id="content-images" class="tab-content hidden">
                
                <!-- Existing Images -->
                @if (existingImages.Any())
                {
                    <div class="mb-8">
                        <h3 class="text-xl font-bold text-gray-900 mb-4">Existing Images</h3>
                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                            @foreach (var image in existingImages.OrderBy(i => i.DisplayOrder))
                            {
                                <div class="relative group">
                                    <img src="@image.Url" alt="@image.AltText" class="w-full h-32 object-cover rounded-lg shadow-md">
                                    
                                    @if (image.IsPrimary)
                                    {
                                        <div class="absolute top-2 left-2">
                                            <span class="px-2 py-1 bg-yellow-500 text-white text-xs font-bold rounded-full shadow-lg flex items-center">
                                                <i class="fas fa-star mr-1"></i>Primary
                                            </span>
                                        </div>
                                    }

                                    <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center space-x-2">
                                        @if (!image.IsPrimary)
                                        {
                                            <form asp-action="SetPrimaryImage" asp-route-carId="@carId" asp-route-imageId="@image.ImageId" method="post" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="px-3 py-1 bg-yellow-500 text-white rounded text-sm hover:bg-yellow-600 transition-colors" 
                                                        title="Set as primary">
                                                    <i class="fas fa-star"></i>
                                                </button>
                                            </form>
                                        }
                                        
                                        <form asp-action="DeleteImage" asp-route-carId="@carId" asp-route-imageId="@image.ImageId" method="post" class="inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this image?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="px-3 py-1 bg-red-500 text-white rounded text-sm hover:bg-red-600 transition-colors" 
                                                    title="Delete image">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="mb-8 p-6 bg-yellow-50 border border-yellow-200 rounded-lg">
                        <div class="flex items-center">
                            <i class="fas fa-exclamation-triangle text-yellow-600 text-xl mr-3"></i>
                            <p class="text-yellow-800">This car has no images. Add at least one image to improve visibility.</p>
                        </div>
                    </div>
                }

                <!-- Add New Images -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Add New Images</h3>
                    
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-primary-500 transition-colors cursor-pointer" 
                         id="drop-zone">
                        <input type="file" name="uploadedImages" id="file-input" multiple accept="image/jpeg,image/png,image/gif,image/webp" class="hidden" onchange="handleFiles(this.files)" />
                        <label for="file-input" class="cursor-pointer">
                            <i class="fas fa-cloud-upload-alt text-6xl text-gray-400 mb-4"></i>
                            <p class="text-lg font-medium text-gray-700 mb-2">Drag & drop images here or click to browse</p>
                            <p class="text-sm text-gray-500">Supports: JPG, PNG, GIF, WEBP (Max 5MB per file)</p>
                        </label>
                    </div>

                    <!-- Preview Area -->
                    <div id="preview-container" class="mt-6 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 hidden">
                        <!-- Previews will be inserted here -->
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-between items-center mt-8 pt-6 border-t border-gray-200">
                <a asp-action="Details" asp-route-id="@carId" class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
                    <i class="fas fa-times mr-2"></i>Cancel
                </a>
                <button type="submit" class="px-6 py-3 bg-primary-500 text-white rounded-lg font-semibold hover:bg-primary-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                    <i class="fas fa-save mr-2"></i>Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Tab switching
        function switchTab(tabName) {
            // Update buttons
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active', 'border-primary-500', 'text-primary-600');
                btn.classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');
            });
            document.getElementById('tab-' + tabName).classList.add('active', 'border-primary-500', 'text-primary-600');
            document.getElementById('tab-' + tabName).classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700', 'hover:border-gray-300');

            // Update content
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.add('hidden');
            });
            document.getElementById('content-' + tabName).classList.remove('hidden');
        }

        // File upload handling
        let selectedFiles = [];

        function handleFiles(files) {
            selectedFiles = Array.from(files);
            displayPreviews();
        }

        function displayPreviews() {
            const container = document.getElementById('preview-container');
            container.innerHTML = '';
            
            if (selectedFiles.length > 0) {
                container.classList.remove('hidden');
                
                selectedFiles.forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const preview = document.createElement('div');
                        preview.className = 'relative group';
                        preview.innerHTML = `
                            <img src="${e.target.result}" class="w-full h-32 object-cover rounded-lg shadow-md" alt="Preview ${index + 1}">
                            <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                                <button type="button" onclick="removeFile(${index})" class="px-3 py-1 bg-red-500 text-white rounded text-sm">
                                    <i class="fas fa-trash mr-1"></i>Remove
                                </button>
                            </div>
                            <p class="text-xs text-gray-600 mt-1 truncate">${file.name}</p>
                        `;
                        container.appendChild(preview);
                    };
                    reader.readAsDataURL(file);
                });
            } else {
                container.classList.add('hidden');
            }
        }

        function removeFile(index) {
            selectedFiles.splice(index, 1);
            updateFileInput();
            displayPreviews();
        }

        function updateFileInput() {
            const input = document.getElementById('file-input');
            const dataTransfer = new DataTransfer();
            selectedFiles.forEach(file => dataTransfer.items.add(file));
            input.files = dataTransfer.files;
        }

        // Drag and drop
        const dropZone = document.getElementById('drop-zone');

        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.classList.add('border-primary-500', 'bg-primary-50');
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.classList.remove('border-primary-500', 'bg-primary-50');
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.classList.remove('border-primary-500', 'bg-primary-50');
            
            const files = e.dataTransfer.files;
            document.getElementById('file-input').files = files;
            handleFiles(files);
        });
    </script>
}
