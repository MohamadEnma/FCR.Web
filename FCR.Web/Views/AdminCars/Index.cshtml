@model List<FCR.Web.Services.Base.CarResponseDto>
@{
    ViewData["Title"] = "Manage Cars";
}

<div class="min-h-screen bg-gray-50 pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Header -->
        <div class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-4xl font-bold text-gray-900 mb-2">Manage Cars</h1>
                    <p class="text-gray-600">Add, edit, or remove cars from your fleet</p>
                </div>
                <a asp-action="Create" class="px-6 py-3 bg-primary-500 text-white rounded-lg font-semibold hover:bg-primary-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl flex items-center space-x-2">
                    <i class="fas fa-plus"></i>
                    <span>Add New Car</span>
                </a>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg flex items-center">
                <i class="fas fa-check-circle mr-3"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg flex items-center">
                <i class="fas fa-exclamation-circle mr-3"></i>
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <!-- Filters Section -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <form method="get" asp-action="Index" id="filterForm">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    
                    <!-- Search -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                               placeholder="Brand or Model...">
                    </div>

                    <!-- Category -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                        <select name="category" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                            <option value="">All Categories</option>
                            <option value="Sedan" selected="@(ViewBag.Category == "Sedan")">Sedan</option>
                            <option value="SUV" selected="@(ViewBag.Category == "SUV")">SUV</option>
                            <option value="Sports" selected="@(ViewBag.Category == "Sports")">Sports</option>
                            <option value="Luxury" selected="@(ViewBag.Category == "Luxury")">Luxury</option>
                            <option value="Convertible" selected="@(ViewBag.Category == "Convertible")">Convertible</option>
                            <option value="Electric" selected="@(ViewBag.Category == "Electric")">Electric</option>
                        </select>
                    </div>

                    <!-- Transmission -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Transmission</label>
                        <select name="transmission" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                            <option value="">All Types</option>
                            <option value="Automatic" selected="@(ViewBag.Transmission == "Automatic")">Automatic</option>
                            <option value="Manual" selected="@(ViewBag.Transmission == "Manual")">Manual</option>
                        </select>
                    </div>

                    <!-- Fuel Type -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Fuel Type</label>
                        <select name="fuelType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                            <option value="">All Fuel Types</option>
                            <option value="Petrol" selected="@(ViewBag.FuelType == "Petrol")">Petrol</option>
                            <option value="Diesel" selected="@(ViewBag.FuelType == "Diesel")">Diesel</option>
                            <option value="Electric" selected="@(ViewBag.FuelType == "Electric")">Electric</option>
                            <option value="Hybrid" selected="@(ViewBag.FuelType == "Hybrid")">Hybrid</option>
                        </select>
                    </div>

                    <!-- Availability -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Availability</label>
                        <select name="isAvailable" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent">
                            <option value="">All</option>
                            <option value="true" selected="@(ViewBag.IsAvailable == true)">Available</option>
                            <option value="false" selected="@(ViewBag.IsAvailable == false)">Unavailable</option>
                        </select>
                    </div>

                    <!-- Min Price -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Min Price</label>
                        <input type="number" name="minPrice" value="@ViewBag.MinPrice" step="10"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                               placeholder="Min daily rate">
                    </div>

                    <!-- Max Price -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Max Price</label>
                        <input type="number" name="maxPrice" value="@ViewBag.MaxPrice" step="10"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                               placeholder="Max daily rate">
                    </div>

                    <!-- Min Seats -->
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Min Seats</label>
                        <input type="number" name="minSeats" value="@ViewBag.MinSeats" min="2" max="9"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                               placeholder="Minimum seats">
                    </div>
                </div>

                <div class="flex justify-end space-x-3 mt-4">
                    <a asp-action="Index" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition-colors">
                        Clear Filters
                    </a>
                    <button type="submit" class="px-6 py-2 bg-primary-500 text-white rounded-lg font-medium hover:bg-primary-600 transition-colors">
                        <i class="fas fa-filter mr-2"></i>Apply Filters
                    </button>
                </div>
            </form>
        </div>

        <!-- Cars Grid -->
        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                @foreach (var car in Model)
                {
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300">
                        <!-- Car Image -->
                        <div class="relative h-56 bg-gray-200">
                            @if (!string.IsNullOrEmpty(car.PrimaryImageUrl))
                            {
                                <img src="@car.PrimaryImageUrl" alt="@car.Brand @car.Model" class="w-full h-full object-cover">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-gray-300 to-gray-400">
                                    <i class="fas fa-car text-6xl text-gray-500"></i>
                                </div>
                            }
                            
                            <!-- Availability Badge -->
                            <div class="absolute top-4 right-4">
                                @if (car.IsAvailable)
                                {
                                    <span class="px-3 py-1 bg-green-500 text-white text-sm font-semibold rounded-full shadow-lg">
                                        <i class="fas fa-check-circle mr-1"></i>Available
                                    </span>
                                }
                                else
                                {
                                    <span class="px-3 py-1 bg-red-500 text-white text-sm font-semibold rounded-full shadow-lg">
                                        <i class="fas fa-times-circle mr-1"></i>Unavailable
                                    </span>
                                }
                            </div>

                            <!-- Category Badge -->
                            <div class="absolute top-4 left-4">
                                <span class="px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full shadow-lg">
                                    @car.Category
                                </span>
                            </div>
                        </div>

                        <!-- Car Details -->
                        <div class="p-6">
                            <h3 class="text-2xl font-bold text-gray-900 mb-2">@car.Brand @car.Model</h3>
                            
                            <div class="flex items-center justify-between mb-4">
                                <span class="text-gray-600">
                                    <i class="fas fa-calendar-alt mr-2"></i>@car.Year
                                </span>
                                <span class="text-2xl font-bold text-primary-600">
                                    $@car.DailyRate.ToString("F2")/day
                                </span>
                            </div>

                            <div class="grid grid-cols-2 gap-2 mb-4 text-sm text-gray-600">
                                <div><i class="fas fa-cog mr-2"></i>@car.Transmission</div>
                                <div><i class="fas fa-gas-pump mr-2"></i>@car.FuelType</div>
                                <div><i class="fas fa-users mr-2"></i>@car.Seats Seats</div>
                                @if (!string.IsNullOrEmpty(car.Color))
                                {
                                    <div><i class="fas fa-palette mr-2"></i>@car.Color</div>
                                }
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex space-x-2">
                                <a asp-action="Details" asp-route-id="@car.CarId" 
                                   class="flex-1 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg font-medium hover:bg-gray-200 transition-colors text-center">
                                    <i class="fas fa-eye mr-1"></i>View
                                </a>
                                <a asp-action="Edit" asp-route-id="@car.CarId" 
                                   class="flex-1 px-4 py-2 bg-primary-500 text-white rounded-lg font-medium hover:bg-primary-600 transition-colors text-center">
                                    <i class="fas fa-edit mr-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@car.CarId" 
                                   class="flex-1 px-4 py-2 bg-red-500 text-white rounded-lg font-medium hover:bg-red-600 transition-colors text-center">
                                    <i class="fas fa-trash mr-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="bg-white rounded-lg shadow-md p-12 text-center">
                <div class="mb-4">
                    <i class="fas fa-car text-6xl text-gray-300"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-700 mb-2">No Cars Found</h3>
                <p class="text-gray-500 mb-6">@(ViewBag.SearchTerm != null || ViewBag.Category != null ? "No cars match your filters. Try adjusting your search criteria." : "Get started by adding your first car to the fleet.")</p>
                <a asp-action="Create" class="inline-block px-6 py-3 bg-primary-500 text-white rounded-lg font-semibold hover:bg-primary-600 transition-colors">
                    <i class="fas fa-plus mr-2"></i>Add Your First Car
                </a>
            </div>
        }
    </div>
</div>
