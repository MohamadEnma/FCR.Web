@{
    ViewData["Title"] = "Privacy Policy";
}

<!-- Privacy Policy Hero -->
<section class="relative pt-32 pb-20 bg-gradient-to-br from-primary-50 to-blue-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="inline-flex items-center px-6 py-2 bg-primary-100 text-primary-700 rounded-full font-bold text-sm mb-6 uppercase tracking-wide">
            <i class="fas fa-shield-alt mr-2"></i>
            Legal
        </div>
        <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-6">
            Privacy Policy
        </h1>
        <p class="text-xl text-gray-600">
            Last updated: <span class="font-semibold">@DateTime.UtcNow.ToString("MMMM dd, yyyy")</span>
        </p>
    </div>
</section>

<!-- Privacy Content -->
