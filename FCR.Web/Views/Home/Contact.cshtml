@section Scripts {
    <script>
        // Form submission handler
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();

            // Show success message (you can integrate with your backend)
            const form = this;
            const formData = new FormData(form);

            // Simulate form submission
            const submitButton = form.querySelector('button[type="submit"]');
            const originalText = submitButton.innerHTML;

            submitButton.disabled = true;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending...';

            setTimeout(() => {
                // Show success message
                submitButton.innerHTML = '<i class="fas fa-check mr-2"></i>Message Sent!';
                submitButton.classList.remove('from-primary-500', 'to-primary-700');
                submitButton.classList.add('from-green-500', 'to-green-700');

                // Reset form
                form.reset();

                // Reset button after 3 seconds
                setTimeout(() => {
                    submitButton.disabled = false;
                    submitButton.innerHTML = originalText;
                    submitButton.classList.remove('from-green-500', 'to-green-700');
                    submitButton.classList.add('from-primary-500', 'to-primary-700');
                }, 3000);
            }, 2000);
        });
    </script>
}