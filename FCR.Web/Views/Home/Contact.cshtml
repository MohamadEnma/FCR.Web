@{
    ViewData["Title"] = "Contact Us";
}

<!-- Contact Hero -->
<section class="relative pt-32 pb-20 bg-gradient-to-br from-primary-50 via-blue-50 to-purple-50">
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-primary-200/30 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-200/30 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
    </div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="inline-flex items-center px-6 py-2 bg-primary-100 text-primary-700 rounded-full font-bold text-sm mb-6 uppercase tracking-wide">
            <i class="fas fa-headset mr-2"></i>
            Get In Touch
        </div>
        <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-6">
            Contact Us
