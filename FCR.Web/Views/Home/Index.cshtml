<!-- CTA Section -->
<section id="booking" class="py-5 bg-primary bg-gradient text-white position-relative overflow-hidden">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: url('data:image/svg+xml,<svg xmlns=\" http: //www.w3.org/2000/svg\" viewBox=\"0 0 1200 120\"><path fill=\"rgba(255,255,255,0.05)\" d=\"M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.
              @section Scripts {
        <script>
            // Counter Animation
            document.addEventListener('DOMContentLoaded', function() {
                const counters = document.querySelectorAll('.counter');
                counters.forEach(counter => {
                    const target = +counter.getAttribute('data-target');
                    const increment = target / 200;

                    const updateCounter = () => {
                        const current = +counter.innerText;
                        if (current < target) {
                            counter.innerText = Math.ceil(current + increment);
                            setTimeout(updateCounter, 10);
                        } else {
                            counter.innerText = target;
                        }
                    };
                    updateCounter();
                });
            });
        </script>
}
