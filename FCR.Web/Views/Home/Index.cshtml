@model FCR.Dal.Models.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="bg-dark text-white pt-5 pb-4 border-top border-secondary position-relative">
    <!-- Background Image for HERO section -->
    <div class="hero-background position-absolute top-0 start-0 w-100 h-100">
        <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
        <img src="https://images.pexels.com/photos/919073/pexels-photo-919073.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Luxury cars" class="w-100 h-100 object-fit-cover">
    </div>

    <!-- Hero section Content -->
    <div class="container position-relative z-index-1">
        <div class="row min-vh-75 align-items-center py-5 py-lg-10">
            <div class="col-lg-7 text-center text-lg-start">
                <h1 class="display-3 fw-bold text-white mb-4">Friberg Car Rental</h1>
                <p class="lead text-white mb-5">Experience luxury and performance with our fleet of premium vehicles. Perfect for business trips, vacations, or special occasions.</p>

                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start">
                    <a href="#booking" class="btn btn-primary btn-lg px-4 py-3 rounded-pill fw-bold">
                        <i class="bi bi-calendar-check me-2"></i> Book Now
                    </a>
                    <a href="#fleet" class="btn btn-outline-light btn-lg px-4 py-3 rounded-pill fw-bold">
                        <i class="bi bi-car-front me-2"></i> View Fleet
                    </a>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Our avaliable cars section -->

<section class="py-5">
    <div class="container">
        <h3 class="text-center mb-5">Our Available Cars</h3>

        @if (Model.AvailableCars.Any())
        {
            <div class="row g-4">
                @foreach (var car in Model.AvailableCars)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card h-100 shadow-sm">
                            <!-- Car Image -->
                            <div class="card-img-top position-relative overflow-hidden" style="height: 200px;">
                                @if (car.Images != null && car.Images.Any())
                                {
                                    <!-- Show first image -->
                                    <img src="@car.Images.First().Url" class="w-100 h-100 object-fit-cover" alt="@car.Brand @car.Model">
                                }
                                else
                                {
                                    <!-- Fallback image -->
                                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                        <span class="text-muted">No Image Available</span>
                                    </div>
                                }
                                <span class="position-absolute top-0 end-0 bg-success text-white px-2 py-1 small">Available</span>
                            </div>

                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">@car.Brand @car.Model</h5>
                                    <span class="badge bg-primary">@car.Year</span>
                                </div>

                                <ul class="list-unstyled small mb-3">
                                    <li class="mb-1"><i class="bi bi-people text-muted me-2"></i> @car.Year </li>
                                </ul>

                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 text-primary fw-bold">$@car.DailyRate.ToString("N2")<small class="text-muted">/day</small></h6>
                                    <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@car.CarId"
                                       class="btn btn-sm btn-outline-primary">Book Now</a>
                                    <a asp-controller="Cars" asp-action="Details" asp-route-carId="@car.CarId"
                                       class="btn btn-sm btn-outline-secondary">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle-fill me-2"></i> Currently no cars available. Please check back later.
            </div>
        }
    </div>
</section>

