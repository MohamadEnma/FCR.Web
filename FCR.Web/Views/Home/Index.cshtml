        <!-- Section Header -->
        <div class="text-center mb-16">
            <span class="inline-block px-6 py-2 bg-primary-100 text-primary-700 rounded-full font-bold text-sm mb-4 uppercase tracking-wide">
                Our Collection
            </span>
