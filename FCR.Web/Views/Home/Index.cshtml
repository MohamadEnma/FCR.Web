            <p class="lead text-muted">Experience the difference with Friberg Car Rentals</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded-4 shadow-hover">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle p-4 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 100px; height: 100px;">
                        <i class="bi bi-shield-check fs-1"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Fully Insured</h4>
                    <p class="text-muted">Comprehensive coverage for complete peace of mind on every journey.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded-4 shadow-hover">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle p-4 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 100px; height: 100px;">
                        <i class="bi bi-star-fill fs-1"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Premium Quality</h4>
                    <p class="text-muted">Latest models from top brands, meticulously maintained to perfection.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded-4 shadow-hover">
                    <div class="feature-icon bg-warning bg-gradient text-white rounded-circle p-4 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 100px; height: 100px;">
                        <i class="bi bi-currency-dollar fs-1"></i>
                    </div>
                    <h4 class="fw-bold mb-3">Best Prices</h4>
                    <p class="text-muted">Competitive rates without compromising on luxury and quality.</p>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="feature-card text-center p-4 h-100 bg-white rounded-4 shadow-hover">
                    <div class="feature-icon bg-danger bg-gradient text-white rounded-circle p-4 d-inline-flex align-items-center justify-content-center mb-4"
                         style="width: 100px; height: 100px;">
                        <i class="bi bi-headset fs-1"></i>
                    </div>
                    <h4 class="fw-bold mb-3">24/7 Support</h4>
                    <p class="text-muted">Always here for you, day or night, wherever your journey takes you.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Fleet Section with Modern Cards -->
<section id="fleet" class="py-5">
    <div class="container py-5">
        <div class="text-center mb-5">
            <span class="badge bg-primary bg-gradient px-3 py-2 mb-3">Our Collection</span>
            <h2 class="display-4 fw-bold mb-3">Premium Fleet</h2>
            <p class="lead text-muted">Handpicked luxury vehicles for every occasion</p>
        </div>

        @if (Model != null && Model.AllCars != null && Model.AllCars.Any())
        {
            <div class="row g-4">
                @foreach (var car in Model.AllCars.Take(6))
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="car-card h-100 bg-white rounded-4 overflow-hidden shadow-hover position-relative">
                            <!-- Badge -->
                            <div class="position-absolute top-0 end-0 m-3" style="z-index: 10;">
                                <span class="badge bg-success bg-gradient px-3 py-2">
                                    <i class="bi bi-check-circle me-1"></i> Available
                                </span>
                            </div>

                            <!-- Car Image -->
                            <div class="car-image-wrapper position-relative overflow-hidden" style="height: 280px;">
                                @if (car.Images != null && car.Images.Any())
                                {
                                    <img src="@car.Images.First().Url"
                                         class="w-100 h-100 object-fit-cover car-image-hover"
                                         alt="@car.Brand @car.Model">
                                }
                                else
                                {
                                    <div class="w-100 h-100 bg-gradient d-flex align-items-center justify-content-center">
                                        <i class="bi bi-car-front text-white" style="font-size: 5rem; opacity: 0.3;"></i>
                                    </div>
                                }
                                <div class="car-overlay position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-0"></div>
                            </div>

                            <div class="p-4">
                                <!-- Car Title & Year -->
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="fw-bold mb-1">@car.Brand @car.Model</h5>
                                        <p class="text-muted small mb-0">@car.Year Model</p>
                                    </div>
                                    <span class="badge bg-primary-subtle text-primary px-3 py-2">@car.Year</span>
                                </div>

                                <!-- Car Features -->
                                <div class="d-flex gap-3 mb-3 text-muted small">
                                    <span><i class="bi bi-fuel-pump me-1"></i> Hybrid</span>
                                    <span><i class="bi bi-speedometer me-1"></i> Auto</span>
                                    <span><i class="bi bi-people me-1"></i> 5 Seats</span>
                                </div>

                                <hr class="my-3">

                                <!-- Price & CTA -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="text-primary fw-bold mb-0">
                                            $@car.DailyRate.ToString("N0")
                                            <small class="text-muted fs-6">/day</small>
                                        </h4>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.CarId"
                                           class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@car.CarId"
                                           class="btn btn-primary btn-sm rounded-pill px-4">
                                            Book Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-primary btn-lg px-5 py-3 rounded-pill">
                    View All Cars <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-car-front text-muted" style="font-size: 5rem;"></i>
                </div>
                <h4 class="text-muted">No cars available at the moment</h4>
                <p class="text-muted">Please check back soon for our premium fleet</p>
            </div>
        }
    </div>
</section>


