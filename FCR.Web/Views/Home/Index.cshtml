        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var car in Model.AllCars.Take(6))
                {
                    <div class="car-card-hover bg-white rounded-3xl overflow-hidden shadow-xl group">
                        <!-- Car Image -->
                        <div class="relative h-64 overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200">
                            @if (car.Images != null && car.Images.Any())
                            {
                                <img src="@car.Images.First().Url"
                                     alt="@car.Brand @car.ModelName"
                                     class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <i class="fas fa-car text-gray-400 text-6xl"></i>
                                </div>
                            }

                            <!-- Badges -->
                            <div class="absolute top-4 right-4 space-y-2">
                                @if (car.IsAvailable)
                                {
                                    <span class="block px-4 py-2 bg-green-500 text-white rounded-full text-sm font-bold shadow-lg">
                                        <i class="fas fa-check-circle mr-1"></i> Available
                                    </span>
                                }
                                <span class="block px-4 py-2 bg-primary-500 text-white rounded-full text-sm font-bold shadow-lg">
                                    @car.Year
                                </span>
                            </div>
                        </div>

                        <!-- Car Info -->
                        <div class="p-6">
                            <!-- Title -->
                            <div class="mb-4">
                                <h3 class="text-2xl font-bold text-gray-900 mb-1">
                                    @car.Brand @car.ModelName
                                </h3>
                                <p class="text-gray-500">@car.Category</p>
                            </div>

                            <!-- Features -->
                            <div class="flex items-center gap-4 mb-4 text-sm text-gray-600">
                                <span class="flex items-center">
                                    <i class="fas fa-gas-pump text-primary-500 mr-1"></i>
                                    @car.FuelType
                                </span>
                                <span class="flex items-center">
                                    <i class="fas fa-cog text-primary-500 mr-1"></i>
                                    @car.Transmission
                                </span>
                                <span class="flex items-center">
                                    <i class="fas fa-users text-primary-500 mr-1"></i>
                                    @car.Seats
                                </span>
                            </div>

                            <hr class="my-4 border-gray-200">

                            <!-- Price & CTA -->
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-gray-500 text-sm">Starting from</p>
                                    <p class="text-3xl font-black text-primary-600">
                                        $@car.DailyRate.ToString("N0")
                                        <span class="text-sm text-gray-500 font-normal">/day</span>
                                    </p>
                                </div>
                                <div class="flex gap-2">
                                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.CarId"
                                       class="w-12 h-12 bg-gray-100 hover:bg-primary-500 text-gray-700 hover:text-white rounded-full flex items-center justify-center transition-all duration-300 group">
                                        <i class="fas fa-eye"></i>
