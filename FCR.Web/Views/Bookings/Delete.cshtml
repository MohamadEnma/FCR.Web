@model FCR.Web.Services.Base.BookingResponseDto

@{
    ViewData["Title"] = "Cancel Booking";
    var rentalDays = (Model.ReturnDate - Model.PickupDate).Days;
}

<!-- Delete/Cancel Booking Section -->
<section class="min-h-screen bg-gradient-to-br from-red-50 via-orange-50 to-yellow-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-red-200/30 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-orange-200/30 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
    </div>

    <div class="relative max-w-4xl mx-auto">

        <!-- Warning Icon -->
        <div class="text-center mb-8 animate-slide-up">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-red-400 to-red-600 rounded-full mb-6 animate-pulse">
                <i class="fas fa-exclamation-triangle text-white text-5xl"></i>
            </div>
            <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-4">
                Cancel Booking?
            </h1>
            <p class="text-xl text-gray-600">
                Are you sure you want to cancel this reservation?
            </p>
        </div>

        <!-- Warning Alert -->
        <div class="bg-gradient-to-r from-red-500 to-orange-600 rounded-3xl shadow-2xl p-8 text-white mb-8 animate-fade-in">
            <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                        <i class="fas fa-exclamation-circle text-3xl"></i>
                    </div>
                </div>
                <div class="flex-1">
                    <h2 class="text-2xl font-bold mb-2">Important Notice</h2>
                    <ul class="space-y-1 text-red-100">
                        <li><i class="fas fa-chevron-right mr-2"></i>This action cannot be undone</li>
                        <li><i class="fas fa-chevron-right mr-2"></i>Your booking will be permanently cancelled</li>
                        <li><i class="fas fa-chevron-right mr-2"></i>Refund depends on cancellation policy</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Booking Details Card -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-8">

            <!-- Header -->
            <div class="bg-gradient-to-r from-gray-800 to-gray-900 p-8 text-white">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-300 mb-2">Booking ID</p>
                        <h3 class="text-3xl font-bold">#@Model.BookingId</h3>
                    </div>
                    <div class="text-right">
                        @if (Model.Status == "Confirmed")
                        {
                            <span class="inline-block px-6 py-2 bg-green-500 rounded-full font-bold">
                                <i class="fas fa-check-circle mr-2"></i>Confirmed
                            </span>
                        }
                        else if (Model.Status == "Cancelled")
                        {
                            <span class="inline-block px-6 py-2 bg-red-500 rounded-full font-bold">
                                <i class="fas fa-times-circle mr-2"></i>Cancelled
                            </span>
                        }
                        else
                        {
                            <span class="inline-block px-6 py-2 bg-yellow-500 rounded-full font-bold">
                                <i class="fas fa-clock mr-2"></i>@Model.Status
                            </span>
                        }
                    </div>
                </div>
            </div>

            <!-- Details -->
            <div class="p-8">

                <!-- Car Info -->
                <div class="mb-8 pb-8 border-b border-gray-200">
                    <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-car text-primary-500 mr-3"></i>
                        Vehicle Details
                    </h4>
                    <div class="bg-gray-50 rounded-2xl p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <h5 class="text-2xl font-bold text-gray-900 mb-1">
                                    @Model.CarBrand @Model.CarModel
                                </h5>
                                <p class="text-gray-600"> • @Model.CarYear</p>
                            </div>
                            <div class="text-right">
                                <p class="text-sm text-gray-500 mb-1">Daily Rate</p>
                                <p class="text-2xl font-bold text-primary-600">$@Model.DailyRate</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Rental Period -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">

                    <!-- Pickup -->
                    <div class="bg-blue-50 rounded-2xl p-6 border-l-4 border-blue-500">
                        <p class="text-blue-600 font-semibold mb-2">
                            <i class="fas fa-calendar-plus mr-2"></i>Pickup Date
                        </p>
                        <p class="text-2xl font-black text-gray-900">
                            @Model.PickupDate.ToString("MMM dd, yyyy")
                        </p>
                        <p class="text-sm text-gray-600 mt-1">@Model.PickupDate.ToString("dddd")</p>
                    </div>

                    <!-- Return -->
                    <div class="bg-purple-50 rounded-2xl p-6 border-l-4 border-purple-500">
                        <p class="text-purple-600 font-semibold mb-2">
                            <i class="fas fa-calendar-minus mr-2"></i>Return Date
                        </p>
                        <p class="text-2xl font-black text-gray-900">
                            @Model.ReturnDate.ToString("MMM dd, yyyy")
                        </p>
                        <p class="text-sm text-gray-600 mt-1">@Model.ReturnDate.ToString("dddd")</p>
                    </div>

                </div>

                <!-- Customer Info -->
                @if (Model.UserId != null)
                {
                    <div class="mb-8 pb-8 border-b border-gray-200">
                        <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-user text-primary-500 mr-3"></i>
                            Customer Information
                        </h4>
                        <div class="bg-gray-50 rounded-2xl p-6">
                            <div class="flex items-center">
                                <div class="w-12 h-12 bg-gradient-to-br from-primary-400 to-primary-600 rounded-full flex items-center justify-center text-white font-bold mr-4">
                                    @(Model.UserFullName ?? "")
                                </div>
                                <div>
                                    <p class="font-bold text-gray-900">@Model.UserFullName </p>
                                    <p class="text-gray-600 text-sm">@Model.UserEmail</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Pricing -->
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-6">
                    <div class="space-y-3">
                        <div class="flex justify-between text-gray-700">
                            <span class="font-medium">Daily Rate</span>
                            <span class="font-bold">$@Model.DailyRate</span>
                        </div>
                        <div class="flex justify-between text-gray-700">
                            <span class="font-medium">Number of Days</span>
                            <span class="font-bold">×@rentalDays</span>
                        </div>
                        <hr class="border-gray-300">
                        <div class="flex justify-between items-center pt-2">
                            <span class="text-2xl font-black text-gray-900">Total Amount</span>
                            <span class="text-4xl font-black text-red-600">
                                $@Model.TotalPrice.ToString("N2")
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Action Buttons -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="BookingId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
                <button type="submit"
                        class="flex items-center justify-center px-8 py-4 bg-gradient-to-r from-red-500 to-red-700 hover:from-red-600 hover:to-red-800 text-white rounded-2xl font-bold text-lg transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl">
                    <i class="fas fa-trash-alt mr-3"></i>
                    Yes, Cancel Booking
                </button>
                <a asp-action="MyBookings"
                   class="flex items-center justify-center px-8 py-4 bg-white hover:bg-gray-50 text-gray-700 border-2 border-gray-200 rounded-2xl font-bold text-lg transform hover:scale-105 transition-all duration-300">
                    <i class="fas fa-arrow-left mr-3"></i>
                    No, Keep Booking
                </a>
            </div>
        </form>

        <!-- Cancellation Policy -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <i class="fas fa-file-contract text-primary-500 mr-3"></i>
                Cancellation Policy
            </h4>
            <div class="space-y-3 text-gray-700">
                <div class="flex items-start">
                    <i class="fas fa-check-circle text-green-500 mr-3 mt-1"></i>
                    <p><strong>Free cancellation</strong> up to 24 hours before pickup</p>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-info-circle text-blue-500 mr-3 mt-1"></i>
                    <p><strong>50% refund</strong> for cancellations within 24 hours of pickup</p>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-times-circle text-red-500 mr-3 mt-1"></i>
                    <p><strong>No refund</strong> for cancellations after pickup time</p>
                </div>
            </div>
        </div>

        <!-- Support Section -->
        <div class="mt-8 text-center">
            <p class="text-gray-600 mb-4">
                Need help? Contact our support team
            </p>
            <a asp-controller="Home" asp-action="Contact"
               class="inline-flex items-center text-primary-600 hover:text-primary-800 font-bold">
                <i class="fas fa-headset mr-2"></i>
                Contact Support
            </a>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        // Confirmation before deletion
        document.querySelector('form').addEventListener('submit', function(e) {
            const confirmed = confirm('Are you absolutely sure you want to cancel this booking? This action cannot be undone.');
            if (!confirmed) {
                e.preventDefault();
            }
        });
    </script>
}