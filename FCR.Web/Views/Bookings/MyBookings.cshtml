@model IEnumerable<FCR.Dal.Classes.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">
            <i class="bi bi-journal-bookmark me-2"></i>My Bookings
        </h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-plus-circle me-1"></i>New Booking
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Vehicle</th>
                            <th>Rental Period</th>
                            <th class="text-end">Price</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.Car.Images.Any())
                                        {
                                            <img src="@item.Car.Images.First().Url"
                                                 class="rounded me-3"
                                                 style="width: 80px; height: 60px; object-fit: cover;"
                                                 alt="@item.Car.Brand @item.Car.Model">
                                        }
                                        <div>
                                            <h6 class="mb-1">@item.Car.Brand @item.Car.Model</h6>
                                            <small class="text-muted">Booking #@item.BookingId</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>@item.PickupDate.ToString("MMM d, yyyy")</div>
                                    <div class="small text-muted">to @item.ReturnDate.ToString("MMM d, yyyy")</div>
                                    <div class="small text-muted">
                                        @((item.ReturnDate - item.PickupDate).Days) day@((item.ReturnDate - item.PickupDate).Days != 1 ? "s" : "")
                                    </div>
                                </td>
                                <td class="text-end">
                                    <div class="fw-bold">@item.TotalPrice.ToString("C")</div>
                                    <div class="small text-muted">@item.Car.DailyRate.ToString("C")/day</div>
                                </td>
                                <td>
                                    @if (item.IsCancelled)
                                    {
                                        <span class="badge bg-danger rounded-pill">
                                            <i class="bi bi-x-circle me-1"></i>Cancelled
                                        </span>
                                    }
                                    else if (item.PickupDate > DateTime.Now)
                                    {
                                        <span class="badge bg-success rounded-pill">
                                            <i class="bi bi-check-circle me-1"></i>Confirmed
                                        </span>
                                        <div class="small text-muted mt-1">
                                            Starts in @((item.PickupDate - DateTime.Now).Days) day@((item.PickupDate - DateTime.Now).Days != 1 ? "s" : ""))
                                        </div>
                                    }
                                    else if (item.ReturnDate < DateTime.Now)
                                    {
                                        <span class="badge bg-secondary rounded-pill">
                                            <i class="bi bi-clock-history me-1"></i>Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary rounded-pill">
                                            <i class="bi bi-lightning-charge me-1"></i>Active
                                        </span>
                                        <div class="small text-muted mt-1">
                                            Due in @((item.ReturnDate - DateTime.Now).Days) day@((item.ReturnDate - DateTime.Now).Days != 1 ? "s" : ""))
                                        </div>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Details" asp-route-id="@item.BookingId"
                                           class="btn btn-sm btn-outline-primary"
                                           title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (!item.IsCancelled && item.PickupDate > DateTime.Now.AddDays(1))
                                        {
                                            <form asp-action="Cancel" asp-route-id="@item.BookingId" method="post">
                                                <button type="submit"
                                                        class="btn btn-sm btn-outline-danger"
                                                        title="Cancel Booking"
                                                        onclick="return confirm('Are you sure you want to cancel this booking?')">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-journal-x text-muted" style="font-size: 3rem;"></i>
            <h5 class="mt-3">No bookings found</h5>
            <p class="text-muted">You haven't made any bookings yet</p>
            <a asp-controller="Cars" asp-action="Index" class="btn btn-primary mt-2">
                <i class="bi bi-car-front me-1"></i>Browse Cars
            </a>
        </div>
    }
</div>
