@model FCR.Dal.Classes.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container mt-4">
    <!-- Success Alert -->
    <div class="alert alert-success d-flex align-items-center" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        <div>
            <h4 class="alert-heading mb-1">Booking Confirmed!</h4>
            <p class="mb-0">Your booking #@Model.BookingId has been successfully confirmed.</p>
        </div>
    </div>

    <!-- Booking Details Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-car-front me-2"></i>
                @Model.Car.Brand @Model.Car.Model
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Booking Details</h6>
                        <hr class="mt-1 mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Booking ID:</span>
                            <strong>#@Model.BookingId</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Status:</span>
                            <span class="badge bg-success">@Model.Status</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Booking Date:</span>
                            <strong>@Model.BookingDate.ToString("f")</strong>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <h6 class="text-muted">Rental Period</h6>
                        <hr class="mt-1 mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Pickup Date:</span>
                            <strong>@Model.PickupDate.ToString("D")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Return Date:</span>
                            <strong>@Model.ReturnDate.ToString("D")</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Total Days:</span>
                            <strong>@((Model.ReturnDate - Model.PickupDate).Days) days</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                        <h5 class="mb-0">Total Price</h5>
                        <h4 class="mb-0 text-primary">@Model.TotalPrice.ToString("C")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a asp-action="MyBookings" class="btn btn-primary me-md-2">
            <i class="bi bi-list-ul me-1"></i> View My Bookings
        </a>
        <a asp-controller="Cars" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-car me-1"></i> Browse More Cars
        </a>
    </div>
</div>

