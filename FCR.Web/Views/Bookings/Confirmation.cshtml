@model FCR.Web.Services.Base.BookingResponseDto

@{
    ViewData["Title"] = "Booking Confirmed";
    var rentalDays = (Model.ReturnDate - Model.PickupDate).Days;
}

<!-- Confirmation Section -->
<section class="min-h-screen bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="absolute inset-0 overflow-hidden">
        <div class="absolute top-20 left-20 w-72 h-72 bg-green-200/30 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-20 right-20 w-96 h-96 bg-emerald-200/30 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
    </div>

    <div class="relative max-w-4xl mx-auto">

        <!-- Success Animation -->
        <div class="text-center mb-8 animate-slide-up">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-green-400 to-green-600 rounded-full mb-6 animate-bounce">
                <i class="fas fa-check text-white text-5xl"></i>
            </div>
            <h1 class="text-5xl md:text-6xl font-black text-gray-900 mb-4">
                Booking Confirmed!
            </h1>
            <p class="text-xl text-gray-600">
                Your reservation has been successfully confirmed
            </p>
        </div>

        <!-- Success Alert -->
        <div class="bg-gradient-to-r from-green-500 to-emerald-600 rounded-3xl shadow-2xl p-8 text-white mb-8 animate-fade-in">
            <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                    <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                        <i class="fas fa-check-circle text-3xl"></i>
                    </div>
                </div>
                <div class="flex-1">
                    <h2 class="text-2xl font-bold mb-2">Booking #@Model.BookingId</h2>
                    <p class="text-green-100">
                        <i class="fas fa-envelope mr-2"></i>
                        A confirmation email has been sent to your registered email address
                    </p>
                </div>
            </div>
        </div>

        <!-- Main Booking Card -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden mb-8">

            <!-- Car Header -->
            <div class="bg-gradient-to-r from-primary-500 to-primary-700 p-8 text-white">
                <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-4">
                        <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
                            <i class="fas fa-car text-3xl"></i>
                        </div>
                        <div>
                            <h3 class="text-3xl font-bold">@Model.CarBrand @Model.CarModel</h3>
                            <p class="text-primary-100">• @Model.CarYear</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <span class="inline-block px-6 py-2 bg-green-500 rounded-full font-bold text-lg">
                            <i class="fas fa-check-circle mr-2"></i>
                            Confirmed
                        </span>
                    </div>
                </div>
            </div>

            <!-- Booking Details -->
            <div class="p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">

                    <!-- Left Column - Booking Info -->
                    <div>
                        <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-info-circle text-primary-500 mr-3"></i>
                            Booking Information
                        </h4>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between py-3 border-b border-gray-200">
                                <span class="text-gray-600 font-medium">
                                    <i class="fas fa-hashtag text-primary-500 mr-2"></i>
                                    Booking ID
                                </span>
                                <span class="font-bold text-gray-900">#@Model.BookingId</span>
                            </div>
                            <div class="flex items-center justify-between py-3 border-b border-gray-200">
                                <span class="text-gray-600 font-medium">
                                    <i class="fas fa-toggle-on text-green-500 mr-2"></i>
                                    Status
                                </span>
                                <span class="px-4 py-1 bg-green-100 text-green-700 rounded-full font-bold text-sm">
                                    @Model.Status
                                </span>
                            </div>
                            <div class="flex items-center justify-between py-3 border-b border-gray-200">
                                <span class="text-gray-600 font-medium">
                                    <i class="fas fa-calendar-check text-primary-500 mr-2"></i>
                                    Booking Date
                                </span>
                                <span class="font-bold text-gray-900">@Model.BookingDate.ToString("MMM dd, yyyy")</span>
                            </div>
                            <div class="flex items-center justify-between py-3 border-b border-gray-200">
                                <span class="text-gray-600 font-medium">
                                    <i class="fas fa-user text-primary-500 mr-2"></i>
                                    Customer
                                </span>
                                <span class="font-bold text-gray-900">@Model.UserFullName</span>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column - Rental Period -->
                    <div>
                        <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-calendar-alt text-primary-500 mr-3"></i>
                            Rental Period
                        </h4>
                        <div class="space-y-4">
                            <!-- Pickup -->
                            <div class="bg-blue-50 rounded-2xl p-6 border-l-4 border-blue-500">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="text-blue-600 font-semibold mb-1">
                                            <i class="fas fa-play-circle mr-2"></i>
                                            Pickup Date
                                        </p>
                                        <p class="text-2xl font-black text-gray-900">
                                            @Model.PickupDate.ToString("MMM dd, yyyy")
                                        </p>
                                        <p class="text-sm text-gray-600 mt-1">
                                            @Model.PickupDate.ToString("dddd")
                                        </p>
                                    </div>
                                    <div class="w-12 h-12 bg-blue-500 rounded-xl flex items-center justify-center">
                                        <i class="fas fa-calendar-day text-white"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Return -->
                            <div class="bg-purple-50 rounded-2xl p-6 border-l-4 border-purple-500">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="text-purple-600 font-semibold mb-1">
                                            <i class="fas fa-stop-circle mr-2"></i>
                                            Return Date
                                        </p>
                                        <p class="text-2xl font-black text-gray-900">
                                            @Model.ReturnDate.ToString("MMM dd, yyyy")
                                        </p>
                                        <p class="text-sm text-gray-600 mt-1">
                                            @Model.ReturnDate.ToString("dddd")
                                        </p>
                                    </div>
                                    <div class="w-12 h-12 bg-purple-500 rounded-xl flex items-center justify-center">
                                        <i class="fas fa-calendar-check text-white"></i>
                                    </div>
                                </div>
                            </div>

                            <!-- Duration -->
                            <div class="bg-gradient-to-r from-orange-50 to-amber-50 rounded-2xl p-4 border-2 border-orange-200">
                                <div class="flex items-center justify-between">
                                    <span class="text-orange-700 font-bold">
                                        <i class="fas fa-clock mr-2"></i>
                                        Total Duration
                                    </span>
                                    <span class="text-2xl font-black text-orange-600">
                                        @rentalDays Day@(rentalDays != 1 ? "s" : "")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Car Details -->
                @if (Model.CarId != null)
                {
                    <div class="bg-gray-50 rounded-2xl p-6 mb-8">
                        <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-car-side text-primary-500 mr-3"></i>
                            Vehicle Details
                        </h4>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            
                            <div class="text-center p-4 bg-white rounded-xl">
                                <i class="fas fa-tag text-primary-500 text-2xl mb-2"></i>
                                <p class="text-sm text-gray-600">Daily Rate</p>
                                <p class="font-bold text-gray-900">$@Model.DailyRate</p>
                            </div>
                        </div>
                    </div>
                }

                <!-- Pricing Breakdown -->
                <div class="bg-gradient-to-br from-primary-50 to-blue-50 rounded-2xl p-8 border-2 border-primary-200">
                    <h4 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-receipt text-primary-500 mr-3"></i>
                        Pricing Details
                    </h4>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center text-gray-700">
                            <span class="font-medium">Daily Rate</span>
                            <span class="font-bold">$@Model.DailyRate</span>
                        </div>
                        <div class="flex justify-between items-center text-gray-700">
                            <span class="font-medium">Number of Days</span>
                            <span class="font-bold">×@rentalDays</span>
                        </div>
                        <hr class="border-primary-200">
                        <div class="flex justify-between items-center pt-2">
                            <span class="text-2xl font-black text-gray-900">Total Price</span>
                            <span class="text-4xl font-black text-primary-600">
                                $@Model.TotalPrice.ToString("N2")
                            </span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Action Buttons -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
            <a asp-action="MyBookings"
               class="flex items-center justify-center px-8 py-4 bg-gradient-to-r from-primary-500 to-primary-700 hover:from-primary-600 hover:to-primary-800 text-white rounded-2xl font-bold text-lg transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-2xl">
                <i class="fas fa-list mr-3"></i>
                View My Bookings
            </a>
            <a asp-controller="Cars" asp-action="Index"
               class="flex items-center justify-center px-8 py-4 bg-white hover:bg-gray-50 text-gray-700 border-2 border-gray-200 rounded-2xl font-bold text-lg transform hover:scale-105 transition-all duration-300">
                <i class="fas fa-car mr-3"></i>
                Browse More Cars
            </a>
        </div>

        <!-- Additional Info -->
        <div class="bg-white rounded-2xl shadow-lg p-8">
            <h4 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <i class="fas fa-lightbulb text-yellow-500 mr-3"></i>
                What's Next?
            </h4>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-envelope text-blue-600 text-2xl"></i>
                    </div>
                    <h5 class="font-bold text-gray-900 mb-2">Check Your Email</h5>
                    <p class="text-gray-600 text-sm">We've sent you a confirmation with all the details</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-id-card text-green-600 text-2xl"></i>
                    </div>
                    <h5 class="font-bold text-gray-900 mb-2">Prepare Documents</h5>
                    <p class="text-gray-600 text-sm">Bring your driver's license and booking ID</p>
                </div>
                <div class="text-center">
                    <div class="w-16 h-16 bg-purple-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-map-marker-alt text-purple-600 text-2xl"></i>
                    </div>
                    <h5 class="font-bold text-gray-900 mb-2">Visit Us</h5>
                    <p class="text-gray-600 text-sm">Come to our location on your pickup date</p>
                </div>
            </div>
        </div>

        <!-- Support Section -->
        <div class="mt-8 text-center">
            <p class="text-gray-600 mb-4">
                Need help? Our support team is here for you 24/7
            </p>
            <a asp-controller="Home" asp-action="Contact"
               class="inline-flex items-center text-primary-600 hover:text-primary-800 font-bold">
                <i class="fas fa-headset mr-2"></i>
                Contact Support
            </a>
        </div>

    </div>
</section>

@section Scripts {
    <script>
        // Confetti effect (optional - requires canvas-confetti library)
        // You can add this library via CDN if you want celebration confetti
        console.log('Booking confirmed successfully!');
    </script>
}